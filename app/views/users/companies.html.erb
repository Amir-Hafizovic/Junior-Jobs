<h1>Company Profiles</h1>

<div class="user-index">
  <div class="mdl-grid">
    <% @employers.each do |company| %>

      <div class="demo-card-square mdl-card mdl-shadow--2dp">
        <div class="img-con">
          <a href="<%= company.id %>"><img src="<%= company.image %>" alt=""></a>
        </div>
        <div class="con">
          <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text"><%= link_to company.company, company%></h2><h6><%= company.name %>, <%= company.employer_title %></h6>
          </div>
          <div class="mdl-card__supporting-text">
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
            Aenan convallis.</p>
          </div>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a href="<%= company.id %>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            View
          </a>
        </div>
      </div>

    <% end %>
  </div>
</div>
