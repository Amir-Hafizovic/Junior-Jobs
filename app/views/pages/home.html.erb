        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= email_field_tag :email, nil, class:  'mdl-textfield__input' %>
          <%= label_tag :email, nil, class: 'mdl-textfield__label' %>

          <%= password_field_tag :password, nil, class:  'mdl-textfield__input' %>
          <%= label_tag :password, nil, class: 'mdl-textfield__label' %>

          <%= submit_tag 'Login', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored' %>
        </div>
        <% end %>
      </div>
    </div>
